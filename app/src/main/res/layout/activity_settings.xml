<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0ece7"
    android:weightSum="10"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.ActivitySettings">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_weight="1"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/current_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8.5"
            android:text="@string/choose_a_doctor"
            android:textColor="@android:color/white"
            android:divider="@android:color/transparent"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:scrollbars="none"
            android:animateLayoutChanges="true"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@string/home_icon"
            app:srcCompat="@drawable/ic_home" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/doctors_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:gravity="center_horizontal"
        android:padding="16dp">
        <include layout="@layout/loading_bg"/>
        <ListView
            android:id="@+id/doctors_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:animateLayoutChanges="true" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:padding="16dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_exit"
        />
</LinearLayout>