<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.ActivityHome"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f0ece7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="10"
            android:layout_weight="1"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8.5"
                android:text="@string/your_measurements"
                android:textColor="@android:color/white"
                android:divider="@android:color/transparent"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:scrollbars="none"
                android:animateLayoutChanges="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:contentDescription="@string/home_icon"
                app:srcCompat="@drawable/ic_settings" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lay_news"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_weight="9"
            android:layout_height="0dp">

            <ListView
                android:id="@+id/measures_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:divider="@android:color/transparent"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:scrollbars="none"
                android:animateLayoutChanges="true" >
            </ListView>

            <ImageButton
                android:id="@+id/btnSendData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_alignBottom="@+id/measures_list"
                android:layout_alignEnd="@+id/measures_list"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_upload" />

            <ImageButton
                android:id="@+id/btnAddMeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/measures_list"
                android:layout_alignStart="@+id/measures_list"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_add" />
        </RelativeLayout>

    </LinearLayout>



    <include layout="@layout/loading_bg"/>
</RelativeLayout>